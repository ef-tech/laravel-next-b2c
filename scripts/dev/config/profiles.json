{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Development Profiles Configuration",
  "description": "定義: サービス起動組み合わせパターン（full、api-only、frontend-only等）",
  "profiles": {
    "full": {
      "name": "Full Stack",
      "description": "全サービス起動（インフラ + API + フロントエンド）",
      "services": [
        "pgsql",
        "redis",
        "mailpit",
        "minio",
        "laravel-api",
        "admin-app",
        "user-app"
      ],
      "dockerProfiles": ["infra", "api", "frontend"],
      "default": true
    },
    "api-only": {
      "name": "API Only",
      "description": "API開発用（インフラ + API のみ）",
      "services": [
        "pgsql",
        "redis",
        "mailpit",
        "minio",
        "laravel-api"
      ],
      "dockerProfiles": ["infra", "api"]
    },
    "frontend-only": {
      "name": "Frontend Only",
      "description": "フロントエンド開発用（インフラ + API + フロントエンド、APIは既存稼働前提）",
      "services": [
        "admin-app",
        "user-app"
      ],
      "dockerProfiles": ["frontend"],
      "assumptions": [
        "Laravel APIが既にhttp://localhost:13000で稼働中"
      ]
    },
    "infra-only": {
      "name": "Infrastructure Only",
      "description": "インフラサービスのみ起動（PostgreSQL、Redis、Mailpit、MinIO）",
      "services": [
        "pgsql",
        "redis",
        "mailpit",
        "minio"
      ],
      "dockerProfiles": ["infra"]
    },
    "minimal": {
      "name": "Minimal",
      "description": "最小構成（PostgreSQL + Redis + API）",
      "services": [
        "pgsql",
        "redis",
        "laravel-api"
      ],
      "dockerProfiles": ["infra", "api"],
      "excludeServices": ["mailpit", "minio"]
    }
  }
}
