{
  "name": "laravel-next-b2c",
  "private": true,
  "workspaces": [
    "frontend/admin-app",
    "frontend/user-app"
  ],
  "scripts": {
    "prepare": "[ -n \"$CI\" ] || husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:admin": "jest --selectProjects=admin-app",
    "test:user": "jest --selectProjects=user-app",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write 'frontend/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "format:check": "prettier --check 'frontend/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^9",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-testing-library": "^6.5.0",
    "globals": "^15.15.0",
    "husky": "^9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15",
    "msw": "^2.11.3",
    "next-router-mock": "^0.9.13",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.6",
    "whatwg-fetch": "^3.6.20"
  },
  "lint-staged": {
    "frontend/admin-app/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'files=\"$@\"; files=$(echo \"$files\" | tr \" \" \"\\n\" | grep -v \"jest.config.js\" | tr \"\\n\" \" \"); [ -n \"$files\" ] && eslint --config frontend/admin-app/eslint.config.mjs --fix --max-warnings=0 $files || true'",
      "prettier --write"
    ],
    "frontend/user-app/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'files=\"$@\"; files=$(echo \"$files\" | tr \" \" \"\\n\" | grep -v \"jest.config.js\" | tr \"\\n\" \" \"); [ -n \"$files\" ] && eslint --config frontend/user-app/eslint.config.mjs --fix --max-warnings=0 $files || true'",
      "prettier --write"
    ],
    "frontend/**/*.{css,md,json}": [
      "prettier --write"
    ],
    "backend/laravel-api/**/*.php": [
      "backend/laravel-api/vendor/bin/pint --"
    ]
  }
}
