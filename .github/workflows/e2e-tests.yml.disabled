name: E2E Tests

on:
  workflow_dispatch:
    inputs:
      shard_count:
        description: 'Number of shards (1-8)'
        required: true
        default: '4'
        type: choice
        options:
          - '1'
          - '2'
          - '4'
          - '8'
  push:
    branches: [main]
    paths:
      - 'frontend/**'
      - 'backend/laravel-api/app/**'
      - 'backend/laravel-api/routes/**'
      - 'e2e/**'
      - '.github/workflows/e2e-tests.yml'

jobs:
  e2e-tests:
    name: E2E Tests (Shard ${{ matrix.shard }}/4)
    runs-on: ubuntu-latest
    timeout-minutes: 60
    strategy:
      fail-fast: false
      matrix:
        shard: [1, 2, 3, 4]

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
          cache-dependency-path: |
            frontend/admin-app/package-lock.json
            frontend/user-app/package-lock.json
            e2e/package-lock.json

      - name: Install frontend dependencies
        run: |
          cd frontend/admin-app && npm ci
          cd ../user-app && npm ci

      - name: Setup Laravel
        run: |
          cd backend/laravel-api
          cp .env.example .env
          composer install --no-interaction --prefer-dist --optimize-autoloader
          php artisan key:generate
          touch database/database.sqlite
          php artisan migrate --force
          php artisan db:seed --force

      - name: Start services
        run: |
          # Start Laravel API
          cd backend/laravel-api
          php artisan serve --host=0.0.0.0 --port=8000 &

          # Start Admin App
          cd frontend/admin-app
          npm run build
          npm start -- -p 3001 &

          # Start User App
          cd frontend/user-app
          npm run build
          npm start -- -p 3000 &

      - name: Wait for services to be ready
        run: |
          npx wait-on \
            http://localhost:3000 \
            http://localhost:3001 \
            http://localhost:8000/up \
            --timeout 120000

      - name: Install E2E dependencies
        run: |
          cd e2e
          npm ci

      - name: Install Playwright browsers
        run: |
          cd e2e
          npx playwright install --with-deps chromium

      - name: Run E2E tests (Shard ${{ matrix.shard }}/4)
        env:
          E2E_ADMIN_URL: http://localhost:3001
          E2E_USER_URL: http://localhost:3000
          E2E_API_URL: http://localhost:8000
          E2E_ADMIN_EMAIL: ${{ secrets.E2E_ADMIN_EMAIL }}
          E2E_ADMIN_PASSWORD: ${{ secrets.E2E_ADMIN_PASSWORD }}
          E2E_USER_EMAIL: ${{ secrets.E2E_USER_EMAIL }}
          E2E_USER_PASSWORD: ${{ secrets.E2E_USER_PASSWORD }}
          CI: '1'
        run: |
          cd e2e
          npx playwright test --shard=${{ matrix.shard }}/4

      - name: Upload test results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: playwright-report-${{ matrix.shard }}
          path: e2e/reports/
          retention-days: 30

      - name: Upload test traces
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: playwright-traces-${{ matrix.shard }}
          path: e2e/test-results/
          retention-days: 30
